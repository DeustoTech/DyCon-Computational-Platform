# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/djoroya/Documentos/GitHub/CCM/Software/DyCon-toolbox/dev/DT-2020-02-15-Bio

# Toolchain information
cc = /usr/bin/gcc
cxx = g++
linker = /usr/bin/gcc
linkerxx = g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=RD_Gray_Scott_mex -c 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=RD_Gray_Scott_mex -c 

ldflags =  -pthread -Wl,--no-undefined -Wl,-rpath-link,$matlabdir/bin/glnxa64 -shared  -L"$matlabdir/bin/glnxa64" -lmx -lmex -lmat -lm -lstdc++  -o RD_Gray_Scott_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil  -Wl,--version-script,RD_Gray_Scott_mex.map

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/rt_nonfinite.o : cc $root/rt_nonfinite.c
build $builddir/RD_Gray_Scott_data.o : cc $root/RD_Gray_Scott_data.c
build $builddir/RD_Gray_Scott_initialize.o : cc $root/RD_Gray_Scott_initialize.c
build $builddir/RD_Gray_Scott_terminate.o : cc $root/RD_Gray_Scott_terminate.c
build $builddir/RD_Gray_Scott.o : cc $root/RD_Gray_Scott.c
build $builddir/colon.o : cc $root/colon.c
build $builddir/eml_int_forloop_overflow_check.o : cc $root/eml_int_forloop_overflow_check.c
build $builddir/meshgrid.o : cc $root/meshgrid.c
build $builddir/power.o : cc $root/power.c
build $builddir/scalexpAlloc.o : cc $root/scalexpAlloc.c
build $builddir/sqrt.o : cc $root/sqrt.c
build $builddir/atan2.o : cc $root/atan2.c
build $builddir/sin.o : cc $root/sin.c
build $builddir/exp.o : cc $root/exp.c
build $builddir/rand.o : cc $root/rand.c
build $builddir/_coder_RD_Gray_Scott_api.o : cc $root/interface/_coder_RD_Gray_Scott_api.c
build $builddir/_coder_RD_Gray_Scott_mex.o : cc $root/interface/_coder_RD_Gray_Scott_mex.c
build $builddir/RD_Gray_Scott_emxutil.o : cc $root/RD_Gray_Scott_emxutil.c
build $builddir/_coder_RD_Gray_Scott_info.o : cc $root/interface/_coder_RD_Gray_Scott_info.c
build $builddir/c_mexapi_version.o : cc $matlabdir/extern/version/c_mexapi_version.c

# Link
build $root/RD_Gray_Scott_mex.mexa64 : link $builddir/rt_nonfinite.o $builddir/RD_Gray_Scott_data.o $builddir/RD_Gray_Scott_initialize.o $builddir/RD_Gray_Scott_terminate.o $builddir/RD_Gray_Scott.o $builddir/colon.o $builddir/eml_int_forloop_overflow_check.o $builddir/meshgrid.o $builddir/power.o $builddir/scalexpAlloc.o $builddir/sqrt.o $builddir/atan2.o $builddir/sin.o $builddir/exp.o $builddir/rand.o $builddir/_coder_RD_Gray_Scott_api.o $builddir/_coder_RD_Gray_Scott_mex.o $builddir/RD_Gray_Scott_emxutil.o $builddir/_coder_RD_Gray_Scott_info.o $builddir/c_mexapi_version.o 
