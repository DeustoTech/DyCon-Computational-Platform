# CompilerName=gcc
# Mode=optim
ninja_required_version = 1.3

# Basic folders
root = .
builddir = $root/build/glnxa64
matlabdir = /usr/local/MATLAB/R2020a
startdir = /home/djoroya/Documentos/GitHub/CCM/Software/DyCon-toolbox/dev/DT-2020-02-15-Bio

# Toolchain information
cc = /usr/bin/gcc
cxx = g++
linker = /usr/bin/gcc
linkerxx = g++

cflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c99 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=mcadd_mex -c 

cxxflags =  -fexceptions -fPIC -fno-omit-frame-pointer -pthread -std=c++11 -D_GNU_SOURCE -DMATLAB_MEX_FILE  -O2 -fwrapv -DNDEBUG -std=c++11 -I "$root" -I "$startdir" -I "$root/interface" -I "$matlabdir/extern/include" -I "." -DMODEL=mcadd_mex -c 

ldflags =  -pthread -Wl,--no-undefined -Wl,-rpath-link,$matlabdir/bin/glnxa64 -shared  -L"$matlabdir/bin/glnxa64" -lmx -lmex -lmat -lm -lstdc++  -o mcadd_mex.mexa64 -lemlrt -lcovrt -lut -lmwmathutil  -Wl,--version-script,mcadd_mex.map

# Build Rules
rule cc
    command = $cc $cflags $in -o $out

rule cxx
    command = $cxx $cxxflags $in -o $out

rule link
    command = $linker $in $ldflags

rule linkxx
    command = $linkerxx $in $ldflags

# Build
build $builddir/rt_nonfinite.o : cc $root/rt_nonfinite.c
build $builddir/mcadd_data.o : cc $root/mcadd_data.c
build $builddir/mcadd_initialize.o : cc $root/mcadd_initialize.c
build $builddir/mcadd_terminate.o : cc $root/mcadd_terminate.c
build $builddir/mcadd.o : cc $root/mcadd.c
build $builddir/_coder_mcadd_api.o : cc $root/interface/_coder_mcadd_api.c
build $builddir/_coder_mcadd_mex.o : cc $root/interface/_coder_mcadd_mex.c
build $builddir/_coder_mcadd_info.o : cc $root/interface/_coder_mcadd_info.c
build $builddir/c_mexapi_version.o : cc $matlabdir/extern/version/c_mexapi_version.c

# Link
build $root/mcadd_mex.mexa64 : link $builddir/rt_nonfinite.o $builddir/mcadd_data.o $builddir/mcadd_initialize.o $builddir/mcadd_terminate.o $builddir/mcadd.o $builddir/_coder_mcadd_api.o $builddir/_coder_mcadd_mex.o $builddir/_coder_mcadd_info.o $builddir/c_mexapi_version.o 
