fig = figure; 

panel_graphs = uipanel('unit','norm','pos',[0.0 0.0 0.7 1.0]);

axes('Parent',panel_graphs)


panel_options = uipanel('unit','norm','pos',[0.7 0.0 0.3 1.0],'Parent',fig);

panel_dogs   = uipanel('Parent',panel_options,'unit','norm','pos',[0.00 0.75 1.0 0.25],'Title','Dogs Distribution');
listbox_dogs = uicontrol('Parent',panel_dogs,'style','listbox',[0.1 0.1 0.8 ])

panel_sheep  = uipanel('Parent',panel_options,'unit','norm','pos',[0.00 0.50 1.0 0.25],'Title','Sheeps Distribution');
panel_target = uipanel('Parent',panel_options,'unit','norm','pos',[0.00 0.25 1.0 0.25],'Title','Targets');
panel_compu  = uipanel('Parent',panel_options,'unit','norm','pos',[0.0  0.0  1.0 0.25]);
